# Railway-optimized Docker build for Next.js + PayloadCMS Application
# This Dockerfile is specifically optimized for Railway deployment

# Stage 1: Base image with Node.js
FROM node:22.12.0-alpine AS base

# Install dependencies needed for native modules
RUN apk add --no-cache \
    libc6-compat \
    dumb-init \
    && rm -rf /var/cache/apk/*

# Install pnpm directly (bypass corepack signature issues)
RUN npm install -g pnpm@latest

# Set working directory
WORKDIR /app

# Stage 2: Install dependencies
FROM base AS deps

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Set environment to prevent download prompts
ENV COREPACK_ENABLE_DOWNLOAD_PROMPT=0
ENV CI=true

# Install dependencies
RUN pnpm install --frozen-lockfile --production=false

# Stage 3: Build the application
FROM base AS builder

# Copy node_modules from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Set build environment variables
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_OPTIONS="--no-deprecation"

# Generate Payload types and importmap
RUN pnpm run generate:types || echo "Types generation skipped"
RUN pnpm run generate:importmap || echo "Importmap generation skipped"

# Build the application
RUN pnpm run build

# Stage 4: Production runtime
FROM base AS runner

# Set production environment
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_OPTIONS="--no-deprecation"

# Create user for security
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Copy public assets if they exist
COPY --from=builder /app/public ./public

# Create .next directory with proper ownership
RUN mkdir .next && chown nextjs:nodejs .next

# Copy built application from builder stage
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Note: SQLite database files are not copied in production (use PostgreSQL)

# Switch to non-root user
USER nextjs

# Expose port (Railway will assign the actual port)
EXPOSE 3000

# Set port environment variable (Railway will override this)
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Start the application
CMD ["dumb-init", "--", "node", "server.js"]